# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
POSTGRESQL_URI=postgresql://localhost:5432/nasa-air-quality
POSTGRESQL_TEST_URI=postgresql://localhost:5432/nasa-air-quality-test
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=nasa-air-quality
POSTGRESQL_USERNAME=postgres
POSTGRESQL_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-too-should-be-different-from-jwt-secret
JWT_REFRESH_EXPIRES_IN=7d

# NASA TEMPO API Configuration
TEMPO_API_BASE_URL=https://tempo.si.edu/api
TEMPO_API_KEY=your-tempo-api-key
TEMPO_DATA_REFRESH_INTERVAL=300000

# EPA AirNow API Configuration
AIRNOW_API_BASE_URL=https://www.airnowapi.org
AIRNOW_API_KEY=your-airnow-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Application Settings
APP_NAME=NASA Air Quality Forecasting
APP_VERSION=1.0.0